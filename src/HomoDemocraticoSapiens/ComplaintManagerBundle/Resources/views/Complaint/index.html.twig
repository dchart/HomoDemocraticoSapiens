<h1>Complaint list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Message</th>
            <th>Is_censored</th>
            <th>Censorship_justification</th>
            <th>Degree_of_assumption</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('doleances_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.message }}</td>
            <td>{{ entity.iscensored }}</td>
            <td>{{ entity.censorshipjustification }}</td>
            <td>{{ entity.degreeofassumption }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('doleances_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('doleances_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('complaint_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
